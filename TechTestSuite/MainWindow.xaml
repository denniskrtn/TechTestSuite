<Window x:Class="TechTestSuite.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tech Test Suite" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Width="120" Height="30" Content="Start Tests" Command="{Binding StartTestsCommand}"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Results}" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Test" Binding="{Binding TestName}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Passed}" Width="80"/>
                <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <ProgressBar Grid.Row="2" Height="20" Margin="0,10,0,0" Value="{Binding Progress}"/>
    </Grid>
</Window>
